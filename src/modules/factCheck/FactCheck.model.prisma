model FactCheck {
  uid        String   @id @db.VarChar(255)
  user_id    String   @db.VarChar(255)
  verdict    String?  @db.VarChar(50)
  confidence Float?
  claim      String?
  conclusion String?
  evidence   Json?    @db.Json
  sources    Json?    @db.Json
  timestamp  DateTime @db.Timestamp(6)

  @@index([user_id], name: "ix_fact_checks_user_id")
  @@index([verdict], name: "ix_fact_checks_verdict")
  @@index([timestamp], name: "ix_fact_checks_timestamp")
  @@index([user_id, timestamp], name: "idx_user_timestamp")
  @@map("fact_checks")
}
